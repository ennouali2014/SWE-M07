<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<Tab xmlns:fx="http://javafx.com/fxml/1" text="Personen-Liste" fx:id="fxmlPersonenListe"
     xmlns="http://javafx.com/javafx/18"
     fx:controller="de.unibremen.akademie.kursverwaltung.controller.PersonenListeController">

<content>
        <AnchorPane>
            <children>
                <BorderPane AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0"
                            AnchorPane.topAnchor="5.0">
                    <top>
                        <VBox BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets bottom="10.0"/>
                            </BorderPane.margin>
                            <children>
                                <Label text="Personenliste" textFill="#91c9a0"  >
                                    <font>
                                        <Font name="System Bold" size="54.0"/>
                                    </font>
                                    <VBox.margin>
                                        <Insets left="10.0" />
                                    </VBox.margin>

                                </Label>
                                <Label text="Hier können die Personen verwaltet werden" textFill="#91c9a0">
                                    <font>
                                        <Font name="System Italic" size="16.0"/>
                                    </font>
                                    <VBox.margin>
                                        <Insets bottom="10.0" left="10.0" />
                                    </VBox.margin>
                                </Label>
                                <HBox alignment="CENTER_LEFT" spacing="20.0">
                                    <children>
                                        <Label prefHeight="18.0" prefWidth="99.0" text="Person suchen:"/>
                                        <TextField fx:id="suchTxtField" prefHeight="26.0" prefWidth="297.0"
                                                   promptText="Suchbegriff eingeben......">

                                        </TextField>
                                        <Button fx:id="zurucksetzenButton" alignment="CENTER" contentDisplay="CENTER"
                                                mnemonicParsing="false" onAction="#zurucksetzenButtonAction"
                                                text="Zurücksetzen"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </top>
                    <bottom>
                        <HBox alignment="CENTER" spacing="50.0" BorderPane.alignment="CENTER">
                            <children>
                                <Button fx:id="personAnlegenButton" mnemonicParsing="false"
                                        onAction="#personAnlegenButtonAction" text="Person anlegen"/>
                                <Button fx:id="andernButton" alignment="CENTER" contentDisplay="CENTER"
                                        mnemonicParsing="false" onAction="#andernButtonAction" text="Bearbeiten/Anzeigen"/>
                                <Button fx:id="loeschButton" alignment="CENTER" contentDisplay="CENTER"
                                        mnemonicParsing="false" onAction="#loeschButtonAction" text="Löschen"/>
                            </children>
                            <BorderPane.margin>
                                <Insets bottom="20.0" top="20.0"/>
                            </BorderPane.margin>
                        </HBox>

                    </bottom>

                    <center>
                        <TableView fx:id="table" BorderPane.alignment="CENTER">
                            <columns>

                                <TableColumn fx:id="anrede" prefWidth="70.0" text="Anrede"/>
                                <TableColumn fx:id="titel" prefWidth="70.0" text="Titel"/>
                                <TableColumn fx:id="vorname" prefWidth="110.0" text="Vorname"/>
                                <TableColumn fx:id="nachname" prefWidth="118.4000244140625" text="Nachname"/>
                                <TableColumn fx:id="strasse" prefWidth="102.39996337890625" text="Strasse"/>
                                <TableColumn fx:id="plz" prefWidth="100.0" text="Plz"/>
                                <TableColumn fx:id="ort" prefWidth="110.0" text="Ort"/>
                                <TableColumn fx:id="email" prefWidth="120.0" text="Email"/>
                                <TableColumn fx:id="telefon" prefWidth="120.0" text="Telefon"/>
                                <TableColumn fx:id="kursTeilnahmeStr" prefWidth="120.0" text="KursTeilnehme"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </center>
                </BorderPane>
            </children>
        </AnchorPane>
    </content>

</Tab>
