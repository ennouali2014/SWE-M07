<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<Tab xmlns:fx="http://javafx.com/fxml/1" text="Personen-Liste" fx:id="ContentPersonenListe"
     xmlns="http://javafx.com/javafx/18"
     fx:controller="de.unibremen.akademie.kursverwaltung.controller.PersonenListeController">
    <content>
        <AnchorPane>
            <children>
                <BorderPane AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0"
                            AnchorPane.topAnchor="5.0">
                    <top>
                        <HBox alignment="CENTER_LEFT" spacing="20.0" BorderPane.alignment="CENTER">
                            <children>
                                <ChoiceBox fx:id="choiceBox" prefWidth="150.0"/>
                                <Label fx:id="lblKursauswahl" text="Kursauswahl"/>
                                <CheckBox fx:id="teilnehmerChkBox" mnemonicParsing="false" text="Teilnehmer"/>
                                <CheckBox fx:id="interessentChkBox" mnemonicParsing="false" text="Interessent"/>
                                <TextField fx:id="suchTxtField" prefWidth="300.0" text="Suchbegriff eingeben......"/>
                                <Button fx:id="suchenButton" mnemonicParsing="false" onAction="#suchButtonAction"
                                        text="suchen"/>
                                <Button fx:id="zurucksetzenButton" alignment="CENTER" contentDisplay="CENTER"
                                        mnemonicParsing="false" onAction="#zurucksetzenButtonAction"
                                        text="zurücksetzen"/>
                            </children>
                            <BorderPane.margin>
                                <Insets bottom="10.0" top="10.0"/>
                            </BorderPane.margin>
                        </HBox>
                    </top>
                    <bottom>
                        <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
                            <children>
                                <Button fx:id="personAnlegenButton" mnemonicParsing="false"
                                        onAction="#personAnlegenButtonAction" text="Person anlegen"/>
                                <Button fx:id="andernButton" alignment="CENTER" contentDisplay="CENTER"
                                        mnemonicParsing="false"
                                        onAction="#andernButtonAction" text="Ändern"/>
                                <Button fx:id="loeschButton" alignment="CENTER" contentDisplay="CENTER"
                                        mnemonicParsing="false"
                                        onAction="#loeschButtonAction" text="Löschen"/>
                            </children>
                            <BorderPane.margin>
                                <Insets bottom="10.0" top="10.0"/>
                            </BorderPane.margin>
                        </HBox>
                    </bottom>
                    <center>
                        <TableView fx:id="table" BorderPane.alignment="CENTER">
                            <columns>
                                <TableColumn fx:id="alleCheckBox" prefWidth="83.19997882843018" text="Alle">
                                    <graphic>
                                        <CheckBox mnemonicParsing="false"/>
                                    </graphic>
                                </TableColumn>
                                <TableColumn fx:id="anrede" prefWidth="70.0" text="Anrede"/>
                                <TableColumn fx:id="titel" prefWidth="70.0" text="Titel"/>
                                <TableColumn fx:id="vorname" prefWidth="110.0" text="Vorname"/>
                                <TableColumn fx:id="nachname" prefWidth="110.0" text="Nachname"/>
                                <TableColumn fx:id="strasse" prefWidth="110.0" text="Strasse"/>
                                <TableColumn fx:id="plz" prefWidth="100.0" text="Plz"/>
                                <TableColumn fx:id="ort" prefWidth="110.0" text="Ort"/>
                                <TableColumn fx:id="email" prefWidth="120.0" text="Email"/>
                                <TableColumn fx:id="telefon" prefWidth="120.0" text="Telefon"/>
                            </columns>
                        </TableView>
                    </center>
                </BorderPane>
            </children>
        </AnchorPane>
    </content>
</Tab>
