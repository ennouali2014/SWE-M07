<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.String?>
<Tab xmlns:fx="http://javafx.com/fxml/1" text="Kurse-Details" fx:id="ContentKurseDetails"
     xmlns="http://javafx.com/javafx/18"
     fx:controller="de.unibremen.akademie.kursverwaltung.controller.KurseDetailsController">
    <content>
        <AnchorPane>
            <children>
                <VBox layoutX="10.0" layoutY="10.0" spacing="20.0" AnchorPane.bottomAnchor="10.0"
                      AnchorPane.leftAnchor="10.0"
                      AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
                    <children>
                        <HBox alignment="CENTER" prefHeight="40.0" prefWidth="790.0">
                            <children>
                                <VBox prefHeight="43.0" prefWidth="191.0">
                                    <children>
                                        <Label text="Kursverwaltung">
                                            <font>
                                                <Font size="28.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" >
                            <children>
                                <Label text="Kurs Name : ">
                                    <font>
                                        <Font size="21.0"/>
                                    </font>
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="kursname">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </TextField>
                                <ComboBox promptText="- Status wählen-">
                                    <HBox.margin>
                                        <Insets left="20.0"/>
                                    </HBox.margin>
                                    <padding>
                                        <Insets left="12.0"/>
                                    </padding>
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Active"/>
                                            <String fx:value="Passive"/>
                                            <String fx:value="Ferien"/>

                                        </FXCollections>
                                    </items>
                                </ComboBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="50.0"
                              >
                            <children>
                                <VBox>
                                    <children>
                                        <Label text="Anzahl VA-Tage:">
                                            <font>
                                                <Font size="21.0"/>
                                            </font>
                                        </Label>
                                        <TextField fx:id="anzahlTage" promptText="AnzahlTage"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="VA-Zyklus:">
                                            <font>
                                                <Font size="21.0"/>
                                            </font>
                                        </Label>
                                        <TextField fx:id="zyklus" promptText="1-7"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="Start Datum : ">
                                            <font>
                                                <Font size="21.0"/>
                                            </font>
                                        </Label>
                                        <DatePicker fx:id="startDatum" onAction="#onDatePickerAction" prefWidth="150.0"
                                                    promptText="dd.MM.yyyy"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="End Datum : ">
                                            <font>
                                                <Font size="21.0"/>
                                            </font>
                                        </Label>
                                        <DatePicker fx:id="endeDatum" prefWidth="165.0" disable="true"
                                                    editable="false"/>
                                    </children>
                                </VBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </HBox>
                        <HBox spacing="50.0" >
                            <children>
                                <VBox>
                                    <children>
                                        <Label text="Min TN: ">
                                            <font>
                                                <Font size="21.0"/>
                                            </font>
                                        </Label>
                                        <TextField fx:id="minTnZahl"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="Max TN: ">
                                            <font>
                                                <Font size="21.0"/>
                                            </font>
                                        </Label>
                                        <TextField fx:id="maxTnZahl"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="Freie Plätze: ">
                                            <font>
                                                <Font size="21.0"/>
                                            </font>
                                        </Label>
                                        <TextField fx:id="freiePlaetze" disable="true" editable="false"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="Aktuelle TN-Zahl: ">
                                            <font>
                                                <Font size="21.0"/>
                                            </font>
                                        </Label>
                                        <TextField fx:id="aktuelleTnZahl" disable="true" editable="false"/>
                                    </children>
                                </VBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </HBox>
                        <HBox spacing="50.0" >
                            <children>
                                <VBox>
                                    <children>
                                        <Label text="Gebühr brutto(€): ">
                                            <font>
                                                <Font size="21.0"/>
                                            </font>
                                        </Label>
                                        <TextField fx:id="gebuehrBrutto"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="MWST (€): ">
                                            <font>
                                                <Font size="21.0"/>
                                            </font>
                                        </Label>
                                        <TextField fx:id="mtwsEuro" disable="true" editable="false"/>
                                    </children>
                                    <opaqueInsets>
                                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                                    </opaqueInsets>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="MWST (%):">
                                            <font>
                                                <Font size="21.0"/>
                                            </font>
                                        </Label>
                                        <TextField fx:id="mtwsProzent"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label text="Gebühr netto(€):">
                                            <font>
                                                <Font size="21.0"/>
                                            </font>
                                        </Label>
                                        <TextField fx:id="gebuehrNetto" disable="true" editable="false"/>
                                    </children>
                                </VBox>
                            </children>
                            <opaqueInsets>
                                <Insets/>
                            </opaqueInsets>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </HBox>
                        <VBox >
                            <children>
                                <Label contentDisplay="CENTER" text="Kursbeschreibung">
                                    <font>
                                        <Font size="21.0"/>
                                    </font>
                                </Label>
                                <TextArea fx:id="kursBeschreibung" prefHeight="182.0" prefWidth="906.0">
                                    <VBox.margin>
                                        <Insets/>
                                    </VBox.margin>
                                </TextArea>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </VBox>
                        <HBox alignment="CENTER" spacing="50.0" >
                            <children>
                                <Button  onAction="#apply" mnemonicParsing="false" prefHeight="51.0" prefWidth="122.0"
                                        text="Apply">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Button>
                                <Button fx:id="clear" onAction="#abbrechen" mnemonicParsing="false" prefHeight="51.0"
                                        prefWidth="122.0"
                                        text="Abbrechen">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Button>
                                <Button onAction="#teilnehmerlist" mnemonicParsing="false" prefHeight="51.0"
                                        prefWidth="173.0"
                                        text="Teilnehmerliste">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Button>
                                <Button onAction="#interessentenlist" mnemonicParsing="false" prefHeight="51.0"
                                        prefWidth="173.0" text="Interessentenlist">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Button>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </content>
</Tab>