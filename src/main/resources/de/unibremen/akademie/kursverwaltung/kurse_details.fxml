<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.String?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@css/style.css"
            xmlns="http://javafx.com/javafx/18"
            fx:controller="de.unibremen.akademie.kursverwaltung.controller.KurseDetailsController">
    <children>
        <VBox layoutX="10.0" layoutY="10.0" spacing="20.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
              AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
            <children>
                <HBox alignment="CENTER" prefHeight="49.0" prefWidth="790.0">
                    <children>
                        <Label text="Kursverwaltung">
                            <font>
                                <Font size="28.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" style="-fx-border-color: lightgrey; -fx-border-radius: 5;">
                    <children>
                        <Label text="Kurs Name : ">
                            <font>
                                <Font size="21.0"/>
                            </font>
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </Label>
                        <TextField>
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </TextField>
                        <ComboBox promptText="-select status-">
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                            <padding>
                                <Insets left="12.0"/>
                            </padding>
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Active"/>
                                    <String fx:value="Passive"/>
                                    <String fx:value="Ferien"/>

                                </FXCollections>
                            </items>
                        </ComboBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="50.0" style="-fx-border-color: lightgrey;">
                    <children>
                        <VBox>
                            <children>
                                <Label text="Dauer (Tag):">
                                    <font>
                                        <Font size="21.0"/>
                                    </font>
                                </Label>
                                <TextField/>
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="Start Datum : ">
                                    <font>
                                        <Font size="21.0"/>
                                    </font>
                                </Label>
                                <DatePicker/>
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="End Datum : ">
                                    <font>
                                        <Font size="21.0"/>
                                    </font>
                                </Label>
                                <DatePicker/>
                            </children>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <HBox spacing="50.0" style="-fx-border-color: lightgrey;">
                    <children>
                        <VBox>
                            <children>
                                <Label text="Min TN: ">
                                    <font>
                                        <Font size="21.0"/>
                                    </font>
                                </Label>
                                <TextField/>
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="Max TN: ">
                                    <font>
                                        <Font size="21.0"/>
                                    </font>
                                </Label>
                                <TextField/>
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="Aktuelle TN-Zahl: ">
                                    <font>
                                        <Font size="21.0"/>
                                    </font>
                                </Label>
                                <TextField editable="false"/>
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="Freie Plätze: ">
                                    <font>
                                        <Font size="21.0"/>
                                    </font>
                                </Label>
                                <TextField editable="false"/>
                            </children>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <HBox spacing="50.0" style="-fx-border-color: lightgrey;">
                    <children>
                        <VBox>
                            <children>
                                <Label text="Gebühr (€) : ">
                                    <font>
                                        <Font size="21.0"/>
                                    </font>
                                </Label>
                                <TextField/>
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="MWST (€) : ">
                                    <font>
                                        <Font size="21.0"/>
                                    </font>
                                </Label>
                                <TextField/>
                            </children>
                            <opaqueInsets>
                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                            </opaqueInsets>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="MWST(%):">
                                    <font>
                                        <Font size="21.0"/>
                                    </font>
                                </Label>
                                <TextField/>
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="Netto(€):">
                                    <font>
                                        <Font size="21.0"/>
                                    </font>
                                </Label>
                                <TextField/>
                            </children>
                        </VBox>
                    </children>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
                <VBox style="-fx-border-color: lightgrey;">
                    <children>
                        <Label contentDisplay="CENTER" text="Kursbeschreibung">
                            <font>
                                <Font size="21.0"/>
                            </font>
                        </Label>
                        <TextArea>
                            <VBox.margin>
                                <Insets right="150.0"/>
                            </VBox.margin>
                        </TextArea>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
                <HBox alignment="CENTER" spacing="50.0" style="-fx-border-color: blaclightgreyk;">
                    <children>
                        <Button mnemonicParsing="false" prefHeight="51.0" prefWidth="122.0" text="Speichern">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                        <Button cancelButton="true" mnemonicParsing="false" prefHeight="51.0" prefWidth="122.0"
                                text="Abbrechen">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" prefHeight="51.0" prefWidth="173.0" text="Teilnehmerlist">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" prefHeight="51.0" prefWidth="173.0" text="Interessentenlist">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
